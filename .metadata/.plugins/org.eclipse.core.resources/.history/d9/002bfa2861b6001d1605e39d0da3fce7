<script type="text/javascript">
	window.onload=function(){
		var xhr = new XMLHttpRequest();
		
		xhr.onreadystatechange=function(event){
			if(xhr.readyState==XMLHttpRequest.DONE)
			
		};
		
		xhr.open('GET', 'sample.xml', true);
		xhr.send();
		
	};

</script>
</head>
